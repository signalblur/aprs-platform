<div class="max-w-2xl mx-auto text-center py-16">
  <h1 class="text-5xl font-bold mb-3 bg-gradient-to-r from-aprs-primary to-aprs-accent bg-clip-text text-transparent">APRS</h1>
  <p class="text-lg text-aprs-text-muted mb-10">Anomalous Phenomena Reporting System</p>

  <% if user_signed_in? %>
    <p class="text-aprs-text-muted mb-6">Welcome back, <span class="text-aprs-text font-medium"><%= current_user.email %></span></p>
    <%= link_to "Browse Sightings", sightings_path,
          class: "inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-aprs-primary hover:bg-aprs-primary-hover text-white font-medium transition-colors" %>
  <% else %>
    <div class="flex items-center justify-center gap-4">
      <%= link_to "Sign In", new_user_session_path,
            class: "px-6 py-3 rounded-lg border border-aprs-border text-aprs-text-muted hover:text-aprs-text hover:border-aprs-primary/50 font-medium transition-all" %>
      <%= link_to "Sign Up", new_user_registration_path,
            class: "px-6 py-3 rounded-lg bg-aprs-primary hover:bg-aprs-primary-hover text-white font-medium transition-colors" %>
    </div>
  <% end %>
</div>
